@using HuaMoney.ViewModel.Transaction
@model TransactionIndexViewModel;

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            Account Amount After
        </th>
        <th>
            Amount
        </th>
        <th>
            Concept
        </th>
        <th>
            Currency
        </th>
        <th>
            Date
        </th>
        <th>
            Recipient
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.transactionList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountAmountAfter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Concept)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recipient)
            </td>
            <td>
                @* <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | *@
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>